# JWT settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# Better Auth settings
BETTER_AUTH_SECRET=better-auth-secret-change-in-production

# Database settings (optional - defaults to SQLite)
# DATABASE_URL=postgresql://user:password@localhost/todo_db

# CORS settings (optional)
# BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# AI Provider settings
# Choose between "gemini" or "huggingface"
AI_PROVIDER=gemini

# Google Gemini settings (required if AI_PROVIDER=gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_NAME=gemini-pro

# Hugging Face settings (required if AI_PROVIDER=huggingface)
HF_API_KEY=your-huggingface-api-key-here
HF_MODEL_NAME=microsoft/DialoGPT-medium

# Hugging Face Inference Endpoint (optional)
HF_INFERENCE_ENDPOINT=https://router.huggingface.co